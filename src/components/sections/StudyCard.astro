---
import { Card as ShadcnCard } from '../ui/card'
---

<ShadcnCard
  className="card-animate transform-y-[-40%] align-start perspective-1200 group relative col-span-1 md:col-span-1 row-span-1 md:row-span-2 h-[185px] md:h-[199px] w-full flex-none transform justify-start overflow-hidden transition duration-75 ease-in-out p-0 rounded-xl shadow-lg"
>
  <a 
    href="https://www.minecraft.net" 
    target="_blank" 
    rel="noreferrer" 
    class="block h-full w-full group"
  >
    <div class="absolute inset-0 z-10 bg-[url('/mc.webp')] bg-center bg-cover bg-no-repeat transition-all duration-300 ease-in-out transform group-hover:scale-105"></div>
    
    <div class="absolute top-0 left-0 right-0 z-20 p-4">
      <div class="flex w-full items-start justify-between">
        <div class="flex flex-col">
          <h2 class="text-white drop-shadow-md">爱好游戏</h2>
          <span class="text-xs text-gray-200 drop-shadow-md">Minecraft</span>
        </div>
      </div>
    </div>
  </a>
</ShadcnCard>