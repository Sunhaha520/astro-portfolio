---
import Card from '../Card.astro'

const entjImage = '/entj.webp'
---

<Card colSpan="md:col-span-1" rowSpan="md:row-span-4" title="性格">
  <div class="personality-container">
    <div class="personality-card">
      <div class="content">
        <h2 class="personality-type">
          <span class="type">E</span>
          <span class="type">N</span>
          <span class="type">T</span>
          <span class="type">J</span>
        </h2>
        <h3 class="personality-title">指挥官</h3>
        <p class="personality-desc">
          大胆、富有想象力的强势领导者。
        </p>
      </div>
    </div>
  </div>
</Card>

<style>
  .personality-container {
    @apply flex w-full h-full justify-center items-center;
  }

  .personality-card {
    @apply relative w-full aspect-square bg-cover bg-center transition-all duration-300;
    background-image: url('/entj.webp');
  }

  .personality-card:hover {
    @apply scale-105;
  }

  .content {
    @apply absolute inset-0 flex flex-col items-center justify-center p-6;
  }

  .personality-type {
    @apply flex justify-center gap-3 mb-4;
  }

  .type {
    @apply text-4xl font-bold;
    background: linear-gradient(to right, rgb(255, 179, 71), rgb(255, 204, 51));
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    text-shadow: 2px 2px 8px rgba(255, 255, 255, 0.3);
  }

  .personality-title {
    @apply text-3xl font-bold mb-3;
    background: linear-gradient(to right, rgb(255, 179, 71), rgb(255, 204, 51));
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    text-shadow: 2px 2px 8px rgba(255, 255, 255, 0.3);
  }

  .personality-desc {
    @apply text-lg font-medium;
  }
</style>